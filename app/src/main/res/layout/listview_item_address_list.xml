<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尹剑浩"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tv_receiver"
        android:layout_toRightOf="@+id/tv_receiver"
        android:text="18680751843"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="默认地址"
        android:textColor="@color/baseBlue"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_address_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_receiver"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:text="重庆重庆市江北区建新东路50好玻璃门  400020" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_address_zip"
        android:background="@color/border" />

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:text="设为默认地址"/>

    <Button
        android:id="@+id/btn_delete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/cb_check"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_border_normal"
        android:text="删除" />

    <Button
        android:id="@+id/btn_edit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/cb_check"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_toStartOf="@+id/btn_delete"
        android:background="@drawable/selector_btn_border_normal"
        android:text="编辑" />


</RelativeLayout>