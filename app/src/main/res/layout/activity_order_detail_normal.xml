<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.caec.activity.OrderDetailNormalActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/baseBlue"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号:   123123123123"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_id"
                    android:layout_marginTop="7dp"
                    android:text="订单状态:   交易完成"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_status"
                    android:layout_marginTop="7dp"
                    android:text="还剩2小时3分4秒自动关闭"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/order_detail_normal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingEnd="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingStart="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/icon_car"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_car" />

                    <TextView
                        android:id="@+id/tv_logistics"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_toEndOf="@+id/icon_car"
                        android:layout_toRightOf="@+id/icon_car"
                        android:gravity="center_vertical"
                        android:text="订单确认收货"
                        android:textColor="@color/color333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_below="@+id/tv_logistics"
                        android:layout_toEndOf="@+id/icon_car"
                        android:layout_toRightOf="@+id/icon_car"
                        android:gravity="center_vertical"
                        android:text="2016-09-08 11:25:30"
                        android:textColor="@color/color999"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_action_next_item" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/icon_person"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_person" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_toEndOf="@+id/icon_person"
                        android:layout_toRightOf="@+id/icon_person"
                        android:gravity="center_vertical"
                        android:text="尹剑浩  18680751843"
                        android:textColor="@color/color333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_below="@+id/tv_name"
                        android:layout_toEndOf="@+id/icon_person"
                        android:layout_toRightOf="@+id/icon_person"
                        android:gravity="center_vertical"
                        android:text="北京 北京市 东城区 建新东路260号"
                        android:textColor="@color/color999"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/icon_reason"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_reason" />

                    <TextView
                        android:id="@+id/tv_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_toEndOf="@+id/icon_reason"
                        android:layout_toRightOf="@+id/icon_reason"
                        android:gravity="center_vertical"
                        android:text="东西太辣鸡,不想要了."
                        android:textColor="@color/color333"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/icon_message"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_message" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_toEndOf="@+id/icon_message"
                        android:layout_toRightOf="@+id/icon_message"
                        android:gravity="center_vertical"
                        android:text="快递给我发顺丰,不然拒收."
                        android:textColor="@color/color333"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/icon_money"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_money" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_toEndOf="@+id/icon_money"
                        android:layout_toRightOf="@+id/icon_money"
                        android:gravity="center_vertical"
                        android:text="支付金额:¥378.00"
                        android:textColor="@color/color333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_payment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_below="@+id/tv_money"
                        android:layout_toEndOf="@+id/icon_money"
                        android:layout_toRightOf="@+id/icon_money"
                        android:gravity="center_vertical"
                        android:text="2016-09-01 14:22:39"
                        android:textColor="@color/color999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:text="银联支付"
                        android:textColor="@color/color333"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:text="商品清单"
                    android:textColor="@color/color333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv_good"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/border_image"
                        android:src="@drawable/placeholder_200_200" />

                    <TextView
                        android:id="@+id/tv_good_name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/iv_good"
                        android:layout_toRightOf="@+id/iv_good"
                        android:gravity="center_vertical"
                        android:text="欧力威"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_good_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_good_name"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/iv_good"
                        android:layout_toRightOf="@+id/iv_good"
                        android:gravity="center_vertical"
                        android:text="颜色:随机发运"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="¥21.00"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_price"
                        android:gravity="center_vertical"
                        android:text="¥66.66"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_old_price"
                        android:gravity="center_vertical"
                        android:text="x1"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/icon_code" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="提车验证码"
                        android:textColor="@color/color333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:gravity="center_vertical|end"
                        android:text="2170 8145 7543"
                        android:textColor="@color/color333"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:text="商品总额"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="¥0.01"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignLeft="@+id/tv_label1"
                        android:layout_below="@+id/tv_label1"
                        android:gravity="center_vertical"
                        android:text="运费"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_goods_price"
                        android:gravity="center_vertical"
                        android:text="¥0.01"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_label3"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignLeft="@+id/tv_label2"
                        android:layout_below="@+id/tv_label2"
                        android:gravity="center_vertical"
                        android:text="优惠"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_freight"
                        android:gravity="center_vertical"
                        android:text="¥0.00"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_label4"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignLeft="@+id/tv_label3"
                        android:layout_below="@+id/tv_label3"
                        android:gravity="center_vertical"
                        android:text="订单总额"
                        android:textColor="@color/color333" />

                    <TextView
                        android:id="@+id/tv_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_discount"
                        android:gravity="center_vertical"
                        android:text="¥0.01"
                        android:textColor="@color/color333" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_below="@+id/tv_label1"
                        android:src="@drawable/icon_add" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_below="@+id/tv_label2"
                        android:src="@drawable/icon_plus" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center_vertical"
                            android:text="实付款:"
                            android:textColor="@color/color333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:gravity="center_vertical"
                            android:text="¥0.01"
                            android:textColor="@color/baseRed" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center_vertical"
                            android:text="下单时间:"
                            android:textColor="@color/color999" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:gravity="center_vertical"
                            android:text="2016-09-01 10:49:39"
                            android:textColor="@color/color999" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
