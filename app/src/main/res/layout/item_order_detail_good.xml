<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line_top"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_good"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/border_image"
        android:src="@drawable/placeholder_200_200" />

    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_good"
        android:layout_toRightOf="@+id/iv_good"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:text="欧力威"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_good_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_good_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_good"
        android:layout_toLeftOf="@+id/tv_old_price"
        android:layout_toRightOf="@+id/iv_good"
        android:layout_toStartOf="@+id/tv_old_price"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingRight="5dp"
        android:paddingTop="3.5dp"
        android:text="颜色:随机发运"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="¥21.00"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_old_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_price"
        android:gravity="center_vertical"
        android:text="¥66.66"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_old_price"
        android:gravity="center_vertical"
        android:text="x1"
        android:textSize="13sp" />
</RelativeLayout>
