<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/baseBlue</item>
        <item name="colorPrimaryDark">@color/baseBlue</item>
        <item name="colorAccent">@color/baseBlue</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="FooterItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selector_footer_item</item>
    </style>
</resources>
